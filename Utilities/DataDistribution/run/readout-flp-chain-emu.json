{
    "fairMQOptions": {
        "devices": [
            {
                "id": "builder",
                "channels": [
                    {
                        "name": "readout",
                        "transport": "shmem",
                        "sockets": [
                            {
                                "type": "pair",
                                "method": "connect",
                                "address": "ipc:///tmp/readout-pipe-0"
                            }
                        ]
                    },
                    {
                        "name": "stf-output-channel",
                        "transport": "shmem",
                        "sockets": [
                            {
                                "type": "pair",
                                "method": "connect",
                                "address": "ipc:///tmp/stf-builder-pipe-0"
                            }
                        ]
                    }
                ]
            },
            {
                "id": "sender",
                "channels": [
                    {
                        "name": "stf-input-channel",
                        "transport": "shmem",
                        "sockets": [
                            {
                                "type": "pair",
                                "method": "bind",
                                "address": "ipc:///tmp/stf-builder-pipe-0"
                            }
                        ]
                    },
                    {
                        "name": "stf-output-channel",
                        "transport": "zeromq",
                        "sockets": [
                            {
                                "type": "pair",
                                "method": "bind",
                                "address": "tcp://*:23000"
                            },
                            {
                                "type": "pair",
                                "method": "bind",
                                "address": "tcp://*:23001"
                            }
                        ]
                    }
                ]
            }
        ]
    }
}
